<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Hadar.Block" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Hadar.BlockItem" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:color">@color/colorAccent</item>
    </style>

    <style name="Hadar.BlockItemLbl" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:layout_margin">3dp</item>

        <item name="android:gravity">center_vertical</item>
    </style>

    <!--Staff_row-->
    <style name="Hadar_Staff_row">

        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@drawable/buttoni_drawable</item>
        <item name="android:textColor">@color/lol01</item>

        <item name="android:textSize">20dp</item>

    </style>


</resources>
