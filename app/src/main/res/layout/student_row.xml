<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@drawable/staffrowblock_drawable" android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:padding="5dp" >


            <View
                android:layout_width="1px"
                android:layout_height="match_parent" android:background="@color/colorWhite"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <Customized.CustomTextView
                android:layout_width="match_parent"

                android:layout_height="match_parent" android:id="@+id/student_tv_studentname"
                android:layout_gravity="center_vertical|right" android:textAlignment="gravity"
                android:gravity="center_vertical|right"
                android:textSize="11sp" android:textColor="@color/colorWhite"
                android:layout_weight="6"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp" />

            <Customized.CustomAwesomeText android:id="@+id/btn_ShowStaffNotes"
                android:layout_width="35dp"
                android:layout_height="35dp" android:text="@string/fa_thumbs_o_up"

                style="@style/Hadar_Staff_row"
                android:textAlignment="center"




                android:layout_gravity="center_horizontal|right"
                android:textSize="15sp"
                android:visibility="visible"

                android:textColor="@color/colorWhite"
                android:background="@drawable/block_circleinner"
                android:gravity="center_horizontal" android:padding="10dp"
                />

            <Customized.CustomAwesomeText android:id="@+id/btn_ShowStaffDelays"
                android:text="@string/fa_refresh"

                style="@style/Hadar_Staff_row"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal|right"
                android:textSize="15sp"
                android:visibility="visible"

                android:textColor="@color/colorWhite"
                android:background="@drawable/block_circleinner"
                android:gravity="center_vertical|center_horizontal" />

            <Customized.CustomAwesomeText   android:id="@+id/btn_ShowStaffAbsences"
                android:text="@string/fa_bullhorn"

                style="@style/Hadar_Staff_row"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal|right"
                android:textSize="15sp"
                android:visibility="visible"

                android:textColor="@color/colorWhite"
                android:background="@drawable/block_circleinner"
                android:gravity="center_vertical|center_horizontal"  />




        </LinearLayout>

    </LinearLayout>


</LinearLayout>