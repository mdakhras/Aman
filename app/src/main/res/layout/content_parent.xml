<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="school.edu.palcore.aman.ParentActivity"
    tools:showIn="@layout/activity_parent"
    android:orientation="vertical">




    <LinearLayout
        android:id="@+id/activity_transition_header"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:transitionName="holder1" android:background="@color/colorPrimaryDark" android:orientation="vertical"

        android:paddingTop="7dp">



        <Customized.CustomTextView
            android:layout_width="match_parent" android:id="@+id/tv_teachernameLabl2"
            android:layout_height="wrap_content"
            style="@style/Hadar.BlockItemLbl"
            android:layout_gravity="right|center_horizontal"
            android:textAlignment="center" android:textColor="@color/colorWhite"
            android:text="ولي الأمر"
            android:textSize="18dp"
            android:gravity="center_vertical|right"
            android:textIsSelectable="true" />


        <Customized.CustomTextView
        android:layout_width="match_parent" android:id="@+id/tv_teachernameLabl"
        android:layout_height="wrap_content"
        style="@style/Hadar.BlockItemLbl"
        android:layout_gravity="right|center_horizontal"
        android:textAlignment="center" android:textColor="@color/colorWhite"
        android:text="محمد عمر الاخرس"
        android:textSize="18dp"
        android:gravity="center_vertical|right"
        android:textIsSelectable="true" />


        <Customized.CustomTextView
            android:layout_width="match_parent" android:id="@+id/tv_childrennameLabl"
            android:layout_height="wrap_content"
            style="@style/Hadar.BlockItemLbl"
            android:layout_gravity="right|center_horizontal"
             android:textColor="@color/colorWhite"
            android:text="أبنائي"
            android:textSize="18dp"
            android:gravity="right"
            android:textIsSelectable="true" />

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"   android:layout_marginTop="-36dp">




    </LinearLayout>

    <!-- Body -->



    <ListView
        android:layout_width="match_parent" android:layout_marginTop="50dp"
        android:layout_height="wrap_content" android:id="@+id/lv_showstudent" android:background="@drawable/list_blockborder"></ListView>


</LinearLayout>


